{
    "name": "acelaya/ze-content-based-error-handler",
    "description": "A Zend Expressive error handler which allows to implement different strategies based on the accepted content-types",
    "type": "library",
    "keywords": [
        "expressive",
        "zend",
        "error handler"
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-servicemanager": "^3.0",
        "zendframework/zend-expressive": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Alejandro Celaya",
            "email": "alejandro@alejandrocelaya.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Acelaya\\Expressive\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcelayaTest\\Expressive\\": "test"
        }
    }
}
