{
    "name": "acelaya/ze-content-based-error-handler",
    "description": "A Zend Expressive error handler which allows to implement different strategies based on the accepted content-types",
    "type": "library",
    "keywords": [
        "expressive",
        "zend",
        "zf",
        "zf3",
        "error handler"
    ],
    "require": {
        "php": "^7.1",
        "psr/log": "^1.0",
        "zendframework/zend-expressive": "^3.0 || ^2.1",
        "zendframework/zend-servicemanager": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.1",
        "phpunit/phpunit": "^7.0",
        "slevomat/coding-standard": "^4.1",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Alejandro Celaya",
            "email": "alejandro@alejandrocelaya.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Acelaya\\ExpressiveErrorHandler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcelayaTest\\ExpressiveErrorHandler\\": "test"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@stan",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse src/ --level=6",
        "test": "phpunit --coverage-clover build/clover.xml --colors=always",
        "pretty-test": "phpunit --coverage-html build/coverage"
    },
    "extra": {
        "zf": {
            "config-provider": "Acelaya\\ExpressiveErrorHandler\\ConfigProvider"
        }
    },
    "config": {
        "sort-packages": true
    }
}
